{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug api",
      "cwd": "${workspaceFolder}/api",
      "request": "launch",
      "type": "node-terminal",
      "command": "pnpm run dev:tsnode",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      // "outFiles": ["${workspaceFolder}/api/dist/**/*.js", "!**/node_modules/**"],
      // "resolveSourceMapLocations": ["${workspaceFolder}/api/dist/**/*.js", "!**/node_modules/**"],
      "presentation": {
        "hidden": false,
        "group": "api",
        "order": 1
      },
      "smartStep": true,
      "enableTurboSourcemaps": true
    },
    {
      "name": "Debug ng serve",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm start:esbuild",
      // "resolveSourceMapLocations": ["${workspaceFolder}/api/dist/**/*.js", "!**/node_modules/**"],
      // "preLaunchTask": "build libs",
      "presentation": {
        "hidden": false,
        "group": "demo",
        "order": 1
      }
    },
    {
      "name": "Debug demo (edge)",
      "type": "pwa-msedge",
      "request": "launch",
      "runtimeExecutable": "dev",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.out/edge",
      "skipFiles": ["<node_internals>/**"],
      "smartStep": true,
      // "resolveSourceMapLocations": ["${workspaceFolder}/api/dist/**/*.js", "!**/node_modules/**"],
      // "preLaunchTask": "start",
      // "cleanUp": "wholeBrowser",
      // "cascadeTerminateToConfigurations": ["start"],
      "presentation": {
        "hidden": false,
        "group": "demo",
        "order": 2
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch demo",
      "configurations": ["Debug api", "Debug ng serve", "Debug demo (edge)"],
      "stopAll": true
    }
  ]
}

  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "msedge",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "runtimeExecutable": "dev",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}/apps/demo/src",
      "userDataDir": "${workspaceFolder}/.out/edge/apps/demo",

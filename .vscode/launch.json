{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug api",
      "cwd": "${workspaceFolder}/api",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev:tsnode"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": false,
        "group": "api",
        "order": 1
      }
    },
    {
      "name": "ng serve: demo",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm start",
      // "preLaunchTask": "build libs",
      "presentation": {
        "hidden": false,
        "group": "demo",
        "order": 1
      }
    },
    {
      "name": "Debug demo (edge)",
      "type": "pwa-msedge",
      "request": "launch",
      "runtimeExecutable": "dev",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.out/edge",
      "skipFiles": ["<node_internals>/**"],
      "smartStep": true,
      "presentation": {
        "hidden": false,
        "group": "demo",
        "order": 2
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch demo",
      "configurations": ["Debug api", "ng serve: demo", "Debug demo (edge)"],
      "stopAll": true
    }
  ]
}

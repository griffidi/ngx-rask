{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve: demo",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm start",
      // "preLaunchTask": "build libs",
      "presentation": {
        "hidden": false,
        "group": "demo",
        "order": 1
      }
    },
    {
      "name": "Debug demo (edge)",
      "type": "pwa-msedge",
      "request": "launch",
      "runtimeExecutable": "dev",
      "url": "http://localhost:4400",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.out/edge",
      "presentation": {
        "hidden": false,
        "group": "demo",
        "order": 2
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch demo",
      "configurations": ["ng serve: demo", "Debug demo (edge)"],
      "stopAll": true
    }
  ]
}

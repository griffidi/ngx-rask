  "version": "2.0.0",
  "tasks": [
    {
      "label": "build core",
      "type": "npm",
      "script": "build:core",
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "build graphql",
      "type": "npm",
      "script": "build:graphql",
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "build components",
      "type": "npm",
      "script": "build:components",
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "build libs",
      "type": "shell",
      "command": "echo build finished...",
      "isBackground": true,
      "dependsOrder": "sequence",
      "dependsOn": ["build core", "build graphql", "build components"],
      "group": "build",
      "problemMatcher": {
        "owner": "npm",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "build finished..."
        },
        "pattern": {
          "regexp": ""
        }
      }
    },
    {
      "label": "start",
      "type": "npm",
      "script": "start:esbuild",
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    }
  ]
}
